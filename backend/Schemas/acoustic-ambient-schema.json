{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "tipo_sonido_detectado": { "type": "string", "enum": ["disparo", "explosion", "vidrio_roto"] },
    "nivel_decibeles": { "type": "number", "minimum": 0 },
    "probabilidad_evento_critico": { "type": "number", "minimum": 0, "maximum": 1 }
  },
  "required": ["tipo_sonido_detectado", "nivel_decibeles", "probabilidad_evento_critico"],
  "additionalProperties": false
}