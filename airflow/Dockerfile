FROM apache/airflow:2.7.3-python3.11

USER root
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

USER airflow

# Instalar dependencias Python necesarias
RUN pip install --no-cache-dir \
    requests==2.31.0 \
    kafka-python==2.0.2
